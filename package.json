{
  "name": "atcoder-widget",
  "version": "0.0.1",
  "description": "A web widget to embed your AtCoder rating.",
  "license": "MIT",
  "author": "remin",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rdrgn/atcoder-widget"
  },
  "scripts": {
    "prepare": "yarn build",
    "build": "rimraf dist && tsc && jsmin -o dist/widget.js dist/widget.js",
    "start": "rimraf dist & cpx 'src/**/*.html' dist --watch & tsc --watch & http-server dist -c-1",
    "lint": "eslint --ext .ts --ignore-path .gitignore .",
    "fix": "eslint --fix --ext .ts --ignore-path .gitignore ."
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "cpx": "^1.5.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "http-server": "^0.11.1",
    "husky": "^3.0.2",
    "jest": "^24.9.0",
    "jsmin": "^1.0.1",
    "lint-staged": "^9.2.1",
    "prettier": "^1.16.4",
    "rimraf": "^3.0.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js?(x),ts?(x)}": [
      "eslint --fix",
      "git add"
    ],
    "*.{?(s)css,htm?(l),json,md,y?(a)ml}": [
      "prettier --write",
      "git add"
    ]
  }
}
